<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/" xmlns:moz="http://www.mozilla.org/2006/browser/search/">
  <ShortName>OSE</ShortName>
  <Description>Example for open search plugin</Description>
  <InputEncoding>UTF-8</InputEncoding>
  <Image width="16" height="16" type="image/x-icon">https://opensearch-example.surge.sh/favicon.ico</Image>
  <Url type="text/html" method="get" template="https://opensearch-example.surge.sh/?search={searchTerms}"/>
  <Url type="application/opensearchdescription+xml" rel="self" template="https://opensearch-example.surge.sh/opensearch.xml" />
  <moz:SearchForm>https://opensearch-example.surge.sh/</moz:SearchForm>
</OpenSearchDescription>
